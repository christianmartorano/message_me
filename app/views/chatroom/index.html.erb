<h2 class="ui center aligned icon header">
  <i class="circular keyboard icon"></i>
    <h3 class="ui inverted center aligned block header">
      ChatRoom
    </h3>
</h2>
<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages-container">
        <div class="ui feed" id="message-container">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, :html => {class: "ui fluid form", role: "form"}, url: message_path, remote: true) do |f| %>
          <div class="ui fluid action input">
            <%= f.text_field :body, placeholder: "Enter Message" %>
            <%= f.button "<small><em>Send </em></small>&nbsp;&nbsp;<i class=\"ui keyboard icon\"></i>".html_safe, class: "ui button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
