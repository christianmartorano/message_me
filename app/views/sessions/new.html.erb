<h1 class="ui center aligned icon header">
  <i class="circular user secret icon"></i>
  ChatRoom
</h1>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, :html => {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username", autofocus: true, required: true %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password", autocomplete: "off", required: true %>
            <i class="lock icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.submit "Login", class: "ui fluid blue submit button" %>
        </div>
      <% end %>
    </div>
    <div class="middle aligned column">
      <%= link_to "Sign Up", "#", class: "ui big button", disabled: true %>
    </div>
  </div>
  <div class="ui vertical divider">
    OR
  </div>
</div>
